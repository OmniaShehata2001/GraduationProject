@model Loginviewmodel




<div class="login-form">

    <h4 class="login-lable">

        Login

    </h4>


    <form class="user-form" asp-action="Login" method="post" role="form">



        <h5 style="color:red"> @Html.ValidationMessage("Validation Error")</h5>







        <div class="form-group">
            <label asp-for="Username" class="col-md-12 control-label"></label>
            <div class="col-md-12">
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="login-passwordlabel"></label>
            <div class="col-md-12">
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="login-buttom" value="Login" />
            </div>
        </div>
    </form>






</div>
